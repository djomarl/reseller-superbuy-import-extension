{
  "manifest_version": 3,
  "name": "Superbuy Reseller Sync",
  "version": "2.1",
  "description": "Sync Superbuy orders naar Dashboard",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.superbuy.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.superbuy.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}